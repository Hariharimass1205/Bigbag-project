<%- include('../layouts/userHeader.ejs') %>


      <!-- LIGHT SECTION -->
      <section class="lightSection clearfix pageHeader">
        <div class="container">
          <div class="row">
            <div class="col-md-6">
              <div class="page-title">
                <h2>CART PAGE</h2>
              </div>
            </div>
            <div class="col-md-6">
              <ol class="breadcrumb float-end">
                <li>
                  <a href='/productCategory'>BACK TO SHOP</a>
                </li>
                <li>
                  <a href="javascript:void(0)">shop</a>
                </li>
              </ol>
            </div>
          </div>
        </div>
      </section>

      <!-- MAIN CONTENT SECTION -->
      <section class="mainContent clearfix cartListWrapper">
        <div class="container">
          <div class="row">
            <div class="col-12">
              <div class="cartListInner text-nowrap">
                <form action="#">
                  <div class="table-responsive">
                    <table class="table">
                      <thead>
                        <tr>
                          <th>Preview</th>
                          <th>Product Name</th>
                          <th>Price</th>
                          <th>Quantity</th>
                          <th>Sub Total</th>
                        </tr>
                      </thead>
                      <% carteditem.forEach(function(item, index) { %>
                      <tbody>
                        <tr class="alert alert-dismissible fade show p-0 mb-0" role="alert">
                          <td style="width: min-content;">
                            <button type="button" class="close me-4 p-0 top-0" data-bs-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                            <span class="cartImage"><img style="height: 50%; width: 50%;" src="/upload/<%= item.productImage1 %>" alt="image"></span>
                          </td>
                          <td class=""><%= item.productName %></td>
                          <td class="">$<%= item.productPrice %></td>
                          <td class="count-input">
							              <a class="incr-btn" data-action="decrease" href="javascript:void(0)"><i class="fa fa-minus"></i></a>
							              <input class="quantity" type="text" value="1">
							              <a class="incr-btn" data-action="increase" href="javascript:void(0)"><i class="fa fa-plus"></i></a>
                          </td>
                          <td class="">$ </td>
                        </tr>
                      </tbody>
                      <% }); %>
                    </table>
                  </div>

                  <div class="row totalAmountArea">
                    <div class="col-sm-5 ms-sm-auto">
                      <ul class="list-unstyled">
                        <li>Sub Total <span>$ dis</span></li>
                        <li>UK Vat <span>$ 18.00</span></li>
                        <li>Grand Total <span class="grandTotal">$ 117.00</span></li>
                      </ul>
                    </div>
                  </div>

                  <div class="checkBtnArea">
                    <a class='btn btn-primary btn-default' href='checkout-step-2.html'>checkout<i class="fa fa-arrow-circle-right" aria-hidden="true"></i></a>
                  </div>
                </form>
              </div> 
            </div>
          </div>
        </div>
      </section>

      
      <%- include('../layouts/userFooter.ejs') %>