                        </div>
                      </div>
                    </div>
                  </div>
                </div>
              </div>
            </div>  
            <div class="col-lg-9 col-md-8" style="display: grid;
            grid-template-columns: repeat(auto-fit,minmax(200px,1fr));
            grid-template-rows: repeat(auto-fit,minmax(300px,1fr));
            gap:10px;" >
          <% productData.forEach((product, i)=> { %>
                <div class="item" >
                    <a  href="/productDetails/<%= product._id %>"><img  data-src="/upload/<%= product.productImage1 %>" src="/upload/<%= product.productImage1 %>" alt="image"   class="img-responsive" style="    width: 150px; padding-bottom: 10px;
                    height: 200px; overflow: hidden;">
                    </a>
                    <div style=" display: flex;
                    flex-direction: column;
                    flex-wrap: nowrap;
                    justify-content: center;
                    align-items: center;">
                      <a href="/productDetails/<%= product._id %>"><h5 style="padding-bottom: 10px;"><%= product.productName %></h5></a>
                    

                       <% if(product.priceBeforeOffer) {%>
                      <h4 style="padding-bottom: 10px;">$<%= product.productPrice %></h4>
                                                       <s><%=product.priceBeforeOffer %></s>
                        <% }else{ %>

                          <h4><%= product.productPrice %></h4>
                          <% } %>
                    </div>
                </div>
                <% }); %>
                <div class="d-flex justify-content-center py-3">
                  <nav aria-label="Page navigation example">
                    <ul class="pagination">
                      <% for( let i = 0; i < count/limit; i++ ) { %>
                      <li class="page-item">
                        <a class="page-link" href="/productCategory?page=<%=i+1 %>"><%= i+1 %></a>
                      </li>
                      <% } %>
                    </ul>
                  </nav>
                </div>
            </div>
          </div>
        </div>
      </section>
