<%- include('../layouts/userHeader.ejs') %>



<div  class="container main-container headerOffset">


    <div class="row" style="padding-top: 100px; padding-left: 200px; padding-bottom: 80px;">
        <div class="col-lg-9 col-md-9 col-sm-7">
            <h1 class="section-title-inner"><span> <i class="fa fa-unlock-alt"> </i> CHANGE YOUR PASSWORD </span></h1>

            <div class="row userInfo">
                <div class="col-xs-12 col-sm-12" style="margin-top: 20px;">
                    

                    <form role="form" action="/passChangeCheck" method="POST">
                        <% if(PassWrong){ %>
                           <h4 style="color: red;">Current password and New Password Isn't matching</h4>
                            <%} %>
                        <div class="form-group">
                            <label for="exampleInputEmail1"> Current Password </label>
                            <input type="Password" name="CurrentPassword" class="form-control" id="exampleInputEmail1" placeholder="Enter Current Password">
                        </div>
                        <div class="form-group">
                            <label for="exampleInputEmail1"> New Password </label>
                            <input type="Password" name="NewPassword" class="form-control" id="exampleInputEmail1" placeholder="Enter New Password">
                        </div>
                        <div class="form-group">
                            <label for="exampleInputEmail1">Confirm  Password </label>
                            <input type="Password" name="ConfirmPassword" class="form-control" id="exampleInputEmail1" placeholder="ReEnter New Password">
                        </div>
                        <button type="submit" class="btn   btn-primary"><i class="fa fa-unlock"> </i> Change Password
                        </button>
                    </form>
                    <div class="clear clearfix">
                        <ul class="pager">
                            <li class="previous pull-right"><a href="/login"> &larr; Back to Login </a></li>
                        </ul>
                    </div>
                </div>
            </div>
            <!--/row end-->

        </div>
        <div class="col-lg-3 col-md-3 col-sm-5"></div>
    </div>
    <!--/row-->

    <div style="clear:both"></div>
</div>
<!-- /wrapper -->

<div class="gap"></div>
<%- include('../layouts/userFooter.ejs') %>

